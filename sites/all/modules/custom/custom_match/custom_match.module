    $next_match_nid = _get_next_match_nid($node->nid);
    if(!empty($next_match_nid))
      $vars['next_match_link'] = l(t('Next match'),'node/'.$next_match_nid,array('attributes'=>array('id'=>'match-page-next-match-link')));
    $prev_match_link = _get_prev_match_nid($node->nid);
