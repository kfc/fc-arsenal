      $vars['prev_match_link'] = l(t('Previous match'),'node/'.$prev_match_link,array('attributes'=>array('id'=>'match-page-prev-match-link')));  
  }
  if($node->type == 'matches_archive'){
    drupal_add_js(drupal_get_path('module', 'custom_match') . '/misc/archive_matches.js'); 
    $view = views_get_view('matches');
    $view->set_display('season_matches');
    $view->set_arguments(array(arg(1)));
