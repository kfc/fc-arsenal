function _custom_match_get_livetv_arsenal_matches(){

  $last_sync = variable_get('livetv_last_sync_date',0);
  $arsenal_matches = variable_get('livetv_arsenal_matches',null);
  if(empty($last_sync) || ((time() - $last_sync) > 60*60*24*1) || $arsenal_matches == null){
    $rss_data = _custom_news_get_rss_data('http://img.livetv.ru/rss/upcoming_ru.xml'); 
    $arsenal_matches = array();
    foreach($rss_data['items'] as $_item){
      if(strpos($_item['guid'],'arsenal') !== false && strpos($_item['title'],iconv('CP1251','UTF-8','Арсенал Л')) !== false ){
        $arsenal_matches[$_item['timestamp']] = $_item;
      }
    }
    variable_set('livetv_last_sync_date',time());
    variable_set('livetv_arsenal_matches',$arsenal_matches);
  }
  return $arsenal_matches;
}

